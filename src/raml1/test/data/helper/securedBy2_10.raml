#%RAML 1.0
title: My API
baseUri: http://localhost:9000
securitySchemes:
  - oauth_1_0:
      type: OAuth 1.0
  - basic:
      type: Basic Authentication
  - oauth_2_0:
      type: OAuth 2.0
      describedBy:
        headers:
          Authorization:
            type: string
        queryParameters:
          access_token:
            type: string
        responses:
          404:
            description: Unauthorized
      settings:
        authorizationUri: https://acme.com/login/oauth/authorize
        accessTokenUri: https://acme.com/login/oauth/access_token
        authorizationGrants: [ code ]
securedBy: [ oauth_2_0 ]
/resource:
  securedBy: [ basic ]
  get:
   securedBy: [ oauth_1_0 ]
